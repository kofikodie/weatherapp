{
    "testEnvironment": "node",
    "rootDir": ".",
    "verbose": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [],
    "modulePathIgnorePatterns": ["./dist", "./node_modules"],
    "transform": {
        "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": ["ts", "js", "json"],
    "globals": {
        "ts-jest": {
            "tsconfig": "tsconfig.json"
        }
    }
}
